<h1>Pokemon</h1>

<h4>Search by name:</h4>
<%= form_tag(pokemon_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search])%>
    <%= submit_tag ("Search")%>
<% end %>

<ul>
  <% @pokemon.each do |pokemon| %>
    <li>
      <a href="/pokemon/<%= pokemon.id %>">
        <%= pokemon.name %>
      </a>
    </li>
  <% end %>
</ul>
